<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardMaintence"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llCard"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_margin="2dp"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            android:padding="5dp"
            android:id="@+id/nameMaintence"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نام کالا"/>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <com.lid.lib.LabelImageView
                    android:id="@+id/imageTools"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:minHeight="200dp"
                    android:minWidth="200dp"
                    android:background="@color/transparent"
                    android:scaleType="centerInside"
                    app:label_backgroundColor="@color/colorAccent"
                    app:label_orientation="RIGHT_TOP"
                    app:label_text=""
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1.2"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <!--<TextView-->
                            <!--android:paddingRight="5dp"-->
                            <!--android:gravity="center"-->
                            <!--android:layout_marginLeft="5dp"-->
                            <!--android:layout_gravity="center"-->
                            <!--android:background="@drawable/ic_car_icon"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--/>-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:paddingRight="5sp"
                            android:layout_height="wrap_content"
                            android:text="نوع ماشین :"/>
                        <TextView
                            android:textSize="12sp"
                            android:id="@+id/carCategory"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="سمند-پرشیا"/>

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <!--<TextView-->
                            <!--android:gravity="center"-->
                            <!--android:background="@drawable/ic_maintenance"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--/>-->
                        <TextView
                            android:textSize="12sp"
                            android:paddingRight="5sp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="گروه کالا:"/>
                        <TextView
                            android:textSize="12sp"
                            android:paddingRight="5sp"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:id="@+id/typeCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23000 تومان"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="12sp"
                            android:paddingRight="5sp"
                            android:gravity="center"
                            android:layout_weight="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="تعداد در کارتن:"/>
                        <TextView
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="@color/whaite"
                            android:id="@+id/countMaintence"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@color/colorAccent"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:id="@+id/cardPrice"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:padding="10dp"
                    android:gravity="center"
                    android:id="@+id/pricceMaintence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>