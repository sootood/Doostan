                <!--app:ms_isRtl="true"-->
                <!--app:ms_enableFloatingLabel="false"-->
                <!--app:ms_hint="نوع کالا"-->
                <!--app:ms_multiline="false" />-->
                <!--</android.support.v7.widget.CardView>-->

                <TextView
                    android:id="@+id/titleYearCar"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:text="سال خودرو را انتخاب کنید:"
                    android:textColor="@color/colorAccent"
                     />

                <android.support.v7.widget.CardView
                    android:id="@+id/prdouctYear"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/whaite"
                    app:cardCornerRadius="10sp">

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spinner4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="0dp"
                        android:background="@color/whaite"
                        android:gravity="right"
                        android:layoutDirection="rtl"
                        android:textAlignment="gravity"
                        app:ms_arrowColor="#030000ff"
                        app:ms_arrowSize="16dp"
                        app:ms_enableFloatingLabel="false"
                        app:ms_hint="سال خودرو"
                        app:ms_hintTextSize="11sp"
                        app:ms_isRtl="true"
                        app:ms_multiline="false"
                        app:ms_thickness="0.0dp" />
                </android.support.v7.widget.CardView>

                <!--<fr.ganfra.materialspinner.MaterialSpinner-->
                <!--android:id="@+id/spinner5"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->

                <!--<fr.ganfra.materialspinner.MaterialSpinner-->
