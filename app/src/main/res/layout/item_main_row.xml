        <android.support.v7.widget.CardView
            android:id="@+id/searchCard"
            android:onClick="searchClicked"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/prdouctYear"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <LinearLayout
                android:padding="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/whaite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="جستجو"/>

                <ImageView
                    android:padding="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_magnifier"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardCornerRadius="3dp"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="جستجو بر اساس کد کالا"/>

                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/corner_grey"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/codeSearch"
                        android:textColor="@color/whaite"
                        android:clickable="true"
                        android:background="@drawable/corner_right"
                        android:gravity="center"
                        android:layout_weight="0.3"
                        android:layout_width="0dp"
                        android:text="جستجو"
                        android:layout_height="fill_parent" />

                    <AutoCompleteTextView
                        android:background="@android:color/transparent"
                        android:id="@+id/autoCompCode"
                        android:layout_margin="10dp"
                        android:cursorVisible="true"
                        android:padding="0dp"
                        android:inputType="number"
                        android:textDirection="ltr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/staticCode"
                        android:paddingLeft="5dp"
                        android:textColor="@color/dark_gray"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1660"/>
                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            app:cardCornerRadius="3dp"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="جستجو بر اساس نام کالا"/>

                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/corner_grey"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/wordSearch"
                        android:textColor="@color/whaite"
                        android:clickable="true"
                        android:background="@drawable/corner_right"
                        android:gravity="center"
                        android:layout_weight="0.3"
                        android:layout_width="0dp"
                        android:text="جستجو"
                        android:layout_height="fill_parent" />

                    <AutoCompleteTextView
                        android:background="@android:color/transparent"
                        android:id="@+id/autoCompName"
                        android:layout_margin="10dp"
                        android:cursorVisible="true"
                        android:padding="0dp"
                        android:hint="جستجو"
                        android:textColorHint="@color/dark_gray"
                        android:textDirection="rtl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:paddingRight="5dp"
                        android:textColor="@color/dark_gray"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="5dp"
                        android:text="     "/>
                </LinearLayout>

            </LinearLayout>
