<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:windowSoftInputMode="adjustResize">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1.2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titlef"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingTop="1dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="جستجوی پیشرفته"
                android:textColor="@color/black"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nextFocusDown="@id/titlef"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/titleTypeCar"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:text="نوع ماشین را انتخاب کنید:"
                    android:textColor="@color/colorAccent"
                   />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/whaite"
                    app:cardCornerRadius="10dp">

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spinner3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="0dp"
                        android:background="@color/whaite"
                        android:gravity="right"
                        android:layoutDirection="rtl"
                        android:textAlignment="gravity"
                        app:ms_arrowColor="#030000ff"
                        app:ms_arrowSize="16dp"
                        app:ms_enableFloatingLabel="false"
                        app:ms_hint="نوع ماشین"
                        app:ms_hintTextSize="11sp"
                        app:ms_isRtl="true"
                        app:ms_multiline="false"
                        app:ms_thickness="0.0dp" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/titleToolsType"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:text="نوع کالا را انتخاب کنید:"
                    android:textColor="@color/colorAccent"
                   />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/whaite"
                    app:cardCornerRadius="10dp">

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spinner1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="0dp"
                        android:background="@color/whaite"
                        android:gravity="right"
                        android:layoutDirection="rtl"
                        android:textAlignment="gravity"
                        app:ms_arrowColor="#030000ff"
                        app:ms_arrowSize="16dp"
                        app:ms_enableFloatingLabel="false"
                        app:ms_hint="نوع کالا"
                        app:ms_hintTextSize="11sp"
                        app:ms_isRtl="true"
                        app:ms_multiline="false"
                        app:ms_thickness="0.0dp" />
                </android.support.v7.widget.CardView>
                <!--<android.support.v7.widget.CardView-->
                <!--android:layout_margin="10dp"-->
                <!--app:cardBackgroundColor="@color/whaite"-->
                <!--app:cardCornerRadius="10dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->
                <!--<fr.ganfra.materialspinner.MaterialSpinner-->
                <!--android:layout_margin="3dp"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:id="@+id/spinner2"-->
                <!--android:background="@color/whaite"-->
