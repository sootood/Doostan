                <!--android:layout_height="wrap_content" />-->
                <android.support.v7.widget.CardView
                    android:id="@+id/searchCard"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/prdouctYear"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:onClick="searchClicked"
                    android:padding="10dp"
                    app:cardBackgroundColor="#0066cc"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp">


                        <TextView
                            android:id="@+id/serchBtnText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="جستجو"
                            android:textAlignment="center"
                            android:textColor="@color/whaite"
                            android:textSize="20dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_magnifier" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="0.3"
        android:padding="5dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleSrchByCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:padding="3dp"
                android:text="جستجو بر اساس کد کالا"
                android:textColor="@color/black"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/corner_grey"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/codeSearch"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/corner_right"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="جستجو"
                    android:textColor="@color/whaite" />

                <AutoCompleteTextView
                    android:id="@+id/autoCompCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:cursorVisible="true"
                    android:inputType="number"
                    android:padding="0dp"
                    android:textDirection="ltr" />

                <TextView
                    android:id="@+id/staticCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:text="1660"
                    android:textColor="@color/dark_gray"
                     />
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="0.3"
        android:padding="5dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleSrchByName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:padding="3dp"
                android:text="جستجو بر اساس نام کالا"
                android:textColor="@color/black"
               />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/corner_grey"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wordSearch"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/corner_right"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="جستجو"
                    android:textColor="@color/whaite" />

                <AutoCompleteTextView
                    android:id="@+id/autoCompName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:cursorVisible="true"
                    android:hint="جستجو"
                    android:padding="0dp"
                    android:textColorHint="@color/dark_gray"
                    android:textDirection="rtl" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:paddingRight="5dp"
                    android:text="     "
                    android:textColor="@color/dark_gray"
                    android:textSize="18dp" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>

