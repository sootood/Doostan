                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/titlef"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="جستحوی پیشرفته"/>

            <LinearLayout
                android:nextFocusDown="@id/titlef"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="نوع ماشین را انتخاب کنید:"/>
        <android.support.v7.widget.CardView
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/whaite"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <fr.ganfra.materialspinner.MaterialSpinner
                android:layout_margin="3dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/spinner3"
                android:background="@color/whaite"
                android:layoutDirection="rtl"
                android:gravity="right"
                android:textAlignment="gravity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ms_arrowColor="#030000ff"
                app:ms_arrowSize="16dp"
                app:ms_thickness="0.3dp"
                app:ms_isRtl="true"
                app:ms_enableFloatingLabel="false"
                app:ms_hint="نوع ماشین"
                app:ms_multiline="false" />
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="نوع کالا را انتخاب کنید:"/>
        <android.support.v7.widget.CardView
            android:layout_margin="10dp"
