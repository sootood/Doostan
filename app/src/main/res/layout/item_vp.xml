<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrllV"
    android:paddingBottom="80dp"
    android:layout_below="@id/appbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/home"/>-->

    <android.support.v7.widget.CardView
        app:cardCornerRadius="3dp"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="جستجو بر اساس کد کالا"/>

    <LinearLayout
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/corner_grey"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/codeSearch"
            android:onClick=""
            android:textColor="@color/whaite"
            android:clickable="true"
            android:background="@drawable/corner_right"
            android:gravity="center"
            android:layout_weight="0.22"
            android:layout_width="0dp"
            android:text="جستجو"
            android:layout_height="fill_parent" />

        <AutoCompleteTextView
            android:background="@android:color/transparent"
            android:id="@+id/autoCompCode"
            android:layout_margin="10dp"
            android:cursorVisible="true"
            android:padding="0dp"
            android:textDirection="ltr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:paddingLeft="5dp"
            android:textColor="@color/dark_gray"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1660"/>
    </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        app:cardCornerRadius="3dp"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="جستجو بر اساس نام کالا"/>

            <LinearLayout
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/corner_grey"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/wordSearch"
                    android:onClick=""
                    android:textColor="@color/whaite"
                    android:clickable="true"
                    android:background="@drawable/corner_right"
                    android:gravity="center"
                    android:layout_weight="0.22"
                    android:layout_width="0dp"
                    android:text="جستجو"
                    android:layout_height="fill_parent" />

                <AutoCompleteTextView
                    android:background="@android:color/transparent"
                    android:id="@+id/autoCompName"
                    android:layout_margin="10dp"
                    android:cursorVisible="true"
                    android:padding="0dp"
                    android:textDirection="ltr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:paddingLeft="5dp"
                    android:textColor="@color/dark_gray"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="جستجو..."/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
</ScrollView>